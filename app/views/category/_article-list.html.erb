<div class="categories-section">
	<div class="<%= "category-heading category-heading-#{@category.name}" %>">
		<%= @category.name %>
	</div>

	<div class="vertical">
		<% @articles.each do |article| %>
			<%= render partial: "common/full", locals: { article: article, category: false } %>
		<% end %>
	</div>
</div>
