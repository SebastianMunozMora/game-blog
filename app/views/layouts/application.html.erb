<!DOCTYPE html>
<html>
  <head>
    <title>GameBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "containers" %>
    <%= stylesheet_link_tag "article" %>
    <%= stylesheet_link_tag "ff-article" %>
    <%= stylesheet_link_tag "thumb" %>
    <%= stylesheet_link_tag "category-tab" %>
    <%= stylesheet_link_tag "full" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag asset_path('game-controller.png') %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <main class="container mx-auto mt-28 px-5 flex">
      <%= render "layouts/top-banner"%>
      <%= yield %>
      <footer>
        hello footer
      </footer>
    </main>
  </body>
</html>
