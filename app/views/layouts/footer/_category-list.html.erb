<section>
    <h4>
        Categories
    </h4>
    <div class="category-list">
        <% Category.all.each do |category| %>
            <div class="<%="category category-heading category-heading-#{category.name}"%>">
                <%= link_to category.name, "/category/#{category.name}", :class => "category-links" %>
            </div>
        <% end %>
    </div>
</section>
