<article id="<%= dom_id article %>" class="thumb">
  <div class="image-box">
    <%= image_tag(article.image, :class => "top-image") %>
  </div>

  <div class="text-box">
    <div class="article-heading">
        <%= link_to "#{article.title}", article %>
    </div>

    <div class="category">
      <%= article.category.name %>
    </div>

    <div class="author-box">
        <i class="fab fa-facebook"></i><%= link_to "#{article.author.name}", article.author %>
    </div>
  </div>
</article>
