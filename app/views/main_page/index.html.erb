
<div style="justify-items: center;" class="page">

  <div class="page-articles">
    <div class="main-section">
      <div class="vertical">
        <%= render "common/article-list" %>
      </div>
    </div>

    <div class="categories-section">
      <div class="category-">
        <% @categories.each do |category| %>
          <div class="<%= "category-heading category-heading-#{category.name}" %>">
            <%= link_to "#{category.name}", "/category/#{category.name}" %>
          </div>
          <div class="vertical">
            <% category.articles.each do |article| %>
              <%= render partial: "common/thumb", locals: { article: article, category: false } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <section class="search-section">
      
    </section>
  </div>
</div>