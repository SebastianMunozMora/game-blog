<article id="<%= dom_id article %>" class="thumb">
  <div class="image-box">
    <%= image_tag(article.image, :class => "top-image") %>
  </div>

  <div class="text-box">
    <div class="article-heading">
        <%= link_to "#{article.title}", article %>
    </div>

    <div class="date-author-field">


    </div>

    <div class="date-author-field">
      <div class="date-field">
        <%= link_to "#{article.created_at.strftime("%d/%m/%y")}", "date/?current=#{article.created_at.to_date}" %>
      </div>
      <div class="author-box">
        <%= link_to "#{article.author.name}", article.author %>
      </div>
    </div>


    <% if category %>
      <div class="category">
        <%= article.category.name %>
      </div>
    <% end %>
  </div>
</article>
